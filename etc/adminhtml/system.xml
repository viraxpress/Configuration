                        <validate>validate-number validate-digits</validate>
                    </field>
                    <field id="height" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                        <label>Height (px)</label>
                        <validate>validate-number validate-digits</validate>
